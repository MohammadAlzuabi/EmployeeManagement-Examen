@page
@model EmployeeManagement.Core.Pages.FilePageModel
@{
}
<h1>Filer</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="file">Upload File</label>
                <input type="file" class="form-control-file" id="file" name="file" accept=".pdf" required />
     
            </div>
            <br />
            <div class="form-group">
                <div class="mb-3">
                    <label for="fileName" class="form-label">File namn</label>
                    <input id="fileName" class="form-control" type="text" asp-for="FileData.Name" placeholder="File namn" />
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-dark">Ladda upp</button>
            </div>
        </form>
    </div>
</div>