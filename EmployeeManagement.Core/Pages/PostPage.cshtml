@page
@model EmployeeManagement.Core.Pages.PostPageModel
@{
}
@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert @((Model.StatusMessage.Contains("uppdaterats")) ? "alert-danger"  : "alert-success")" role="alert">
        @Model.StatusMessage
    </div>
}

<!-- Add Post Form -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <h5 class="text-center mb-3">Skapa inlägg</h5>
                    <input type="hidden" asp-for="Post.UserId" value="@Model.UserId" />
                    <div class="form-floating mb-3">
                        <input id="floatingTitleInput" class="form-control" placeholder="Titel" asp-for="Post.Title" />
                        <label for="floatingTitleInput">Titel</label>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea id="floatingTextarea" class="form-control" style="height: 200px;" placeholder="Innehåll" asp-for="Post.Content"></textarea>
                        <label for="floatingTextarea">Innehåll</label>
                    </div>
                    <div class="form-group mb-3">
                        <label for="postImage" class="form-label">Lägg till bild</label>
                        <input type="file" id="postImage" accept=".png,.jpg,.jpeg,.gif,.tif" asp-for="Post.PostImage" class="form-control" />
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-dark">Skapa inlägg</button>
                </div>
            </form>
        </div>
    </div>
</div>