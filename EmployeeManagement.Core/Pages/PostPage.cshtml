@page
@model EmployeeManagement.Core.Pages.PostPageModel
@{
}
@if (Model.UserId != null)
{
    <div class="sticky-top justify-content-center">
        <div class="col text-center">
            <button class="btn webcolor" type="button" data-bs-toggle="modal" data-bs-target="#addPostModal">Skapa Inlägg</button>
        </div>
    </div>
}
else
{
    <p class="text-center"><a asp-area="Identity" asp-page="Account/Login">Logga in</a> för att skapa ett inlägg!</p>
}


<!-- Add Post Modal -->
<div class="modal fade" id="addPostModal" tabindex="-1" aria-labelledby="addPostModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title " id="addPostModalLabel">Skapa inlägg</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body justify-content-center">
                    <input type="hidden" asp-for="Post.UserId" value="@Model.UserId" />
                    <div class="form-group mb-3">
                        <div class="form-floating mb-2">
                            <input id="floatingTitleInput" class="form-control" placeholder="Titel" asp-for="Post.Title" />
                            <label for="floatingTitleInput">Titel</label>
                        </div>
                        <div class="form-floating">
                            <textarea id="floatingTextarea" class="form-control" style="width: 100%; height: 50%" placeholder="Innehåll" asp-for="Post.Content"></textarea>
                            <label for="floatingTextarea">Innehåll</label>
                        </div>
                            <label for="floatingImage">Lägg til bild</label>
                        <div class="form-floating">
                            <input type="file"
                                   accept=".png,.jpg,.jpeg,.gif,.tif"
                                   asp-for="Post.PostImage"
                                   class="form-control"
                                   style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                                   onchange="loadImage(event)" />
                            <span asp-validation-for="Post.PostImage" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Avbryt</button>
                    <button type="submit" class="btn btn-primary">Skapa inlägg</button>
                </div>
            </form>
        </div>
    </div>
</div>